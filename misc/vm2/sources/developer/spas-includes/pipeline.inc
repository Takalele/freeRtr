Function pipeLineBegListen:Word;
Begin;
asm sysCall pipeLine.startListen;
asm VarAddr trg @result;
asm movW duwuw [trg] b;
End;

Function pipeLineEndListen:Word;
Begin;
asm sysCall pipeLine.stopListen;
asm VarAddr trg @result;
asm movW duwuw [trg] b;
End;

Function pipeLineGetIncoming(var pip:LongInt):Word;
Begin;
asm sysCall pipeLine.getIncoming;
asm VarAddr trg @result;
asm movW duwuw [trg] b;
asm VarAddr trg pip;
asm AddrLod trg [trg];
asm movW dudud [trg] a;
End;

Function pipeLineCreate(var pip:LongInt;pid,siz:LongInt;blockMode:Boolean):Word;
Begin;
asm VarAddr trg pid;
asm movR dudud a [trg];
asm VarAddr trg siz;
asm movR dudud c [trg];
asm VarAddr trg blockMode;
asm movR dubub b [trg];
asm sysCall pipeLine.create;
asm VarAddr trg @result;
asm movW duwuw [trg] b;
asm VarAddr trg pip;
asm AddrLod trg [trg];
asm movW dudud [trg] a;
End;

Function pipeLineClose(pip:LongInt):Word;
Begin;
asm VarAddr trg pip;
asm movR dudud a [trg];
asm sysCall pipeLine.close;
asm VarAddr trg @result;
asm movW duwuw [trg] b;
End;

Function pipeLineStats(pip:LongInt;var pid,rx,tx:LongInt):Word;
Begin;
asm VarAddr trg pip;
asm movR dudud a [trg];
asm sysCall pipeLine.info;
asm VarAddr trg @result;
asm movW duwuw [trg] b;
asm VarAddr trg pid;
asm AddrLod trg [trg];
asm movW dudud [trg] a;
asm VarAddr trg tx;
asm AddrLod trg [trg];
asm movW dudud [trg] c;
asm VarAddr trg rx;
asm AddrLod trg [trg];
asm movW dudud [trg] d;
End;

Function pipeLineRecv(pip:LongInt;var buf;var siz:LongInt):Word;
Begin;
asm VarAddr trg pip;
asm movR dudud a [trg];
asm VarAddr trg siz;
asm AddrLod trg [trg];
asm movR dudud c [trg];
asm VarAddr trg buf;
asm AddrLod trg [trg];
asm sysCall pipeLine.receive;
asm VarAddr trg @result;
asm movW duwuw [trg] b;
asm VarAddr trg siz;
asm AddrLod trg [trg];
asm movW dudud [trg] c;
End;

Function pipeLineSend(pip:LongInt;var buf;siz:LongInt):Word;
Begin;
asm VarAddr trg pip;
asm movR dudud a [trg];
asm VarAddr trg siz;
asm movR dudud c [trg];
asm VarAddr src buf;
asm AddrLod src [src];
asm sysCall pipeLine.send;
asm VarAddr trg @result;
asm movW duwuw [trg] b;
End;
