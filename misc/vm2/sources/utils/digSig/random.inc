Procedure GetRndBigNum(var d:BigNumContextRecord;s:LongInt);
Var
  buf:array[1..1] of byte absolute d;
  i,o:LongInt;
Begin;
fillchar(d,sizeof(d),0);
if (s<8) then s:=8;
i:=0;
while (s>0) do begin;
  o:=random($100);
  inc(i);
  buf[i]:=o;
  dec(s,8);
  end;
inc(s,8);
buf[i]:=o and ((1 shl s)-1);
inc(i);
buf[i]:=0;
BigNumConvLSB2BN(i,d,d);
End;
