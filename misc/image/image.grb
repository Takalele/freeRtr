select-one grub-%grub%                #grub binary

select-lst
select-sum
package-down
package-inst
include ../misc/image/image.cln

exec grub-mkimage -o %img%.grb -c ../misc/image/boot.grb -d %tmp%/usr/lib/grub/%boot% -O %boot% -p grub normal search boot linux part_msdos part_gpt fat ext2 iso9660 syslinuxcfg test progress
exec dd if=/dev/zero of=%img%.flp bs=1K count=1440
exec /sbin/mkfs.vfat %img%.flp
exec mmd -i %img%.flp efi efi/boot
exec mcopy -i %img%.flp %img%.grb ::efi/boot/%uefi%
